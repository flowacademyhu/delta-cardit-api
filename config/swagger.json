    "definitions": {
        "User": {
            "properties": {
                "firstName": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "isAlpha": true,
                        "notEmpty": true
                    }
                },
                "lastName": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "isAlpha": true,
                        "notEmpty": true
                    }
                },
                "email": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "defaultValue": null,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "isEmail": true,
                        "notEmpty": true
                    }
                },
                "passwordHash": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "defaultValue": null,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "notEmpty": true
                    }
                },
                "role": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "defaultValue": null,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "notEmpty": true
                    }
                },
                "lastLogin": {
                    "type": "date",
                    "isDate": true
                },
                "GroupId": {
                    "type": "integer"
                }
            }
        },
        "Users": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/User"
            }
        },
        "Card": {
            "properties": {
                "question": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500
                    }
                },
                  "answer": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": { 
                        "min": 3, 
                        "max": 500
                    }
                },
                  "difficulty": {
                    "type": "integer",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": { 
                        "min": 1,
                        "max": 3
                    }
                },
                  "type": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": { 
                        "min": 3, 
                        "max": 500
                    }
                }
            }
        },
        "Cards": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Card"
            }
        }
    }
