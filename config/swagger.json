    "definitions": {
        "User": {
            "properties": {
                "firstName": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "isAlpha": true,
                        "notEmpty": true
                    }
                },
                "lastName": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "isAlpha": true,
                        "notEmpty": true
                    }
                },
                "email": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "defaultValue": null,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "isEmail": true,
                        "notEmpty": true
                    }
                },
                "passwordHash": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "defaultValue": null,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "notEmpty": true
                    }
                },
                "role": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "defaultValue": null,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "notEmpty": true
                    }
                },
                "lastLogin": {
                    "type": "date",
                    "isDate": true
                },
                "GroupId": {
                    "type": "integer"
                }
            }
        },
        "Users": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/User"
            }
        },
        "Card": {
            "properties": {
                "question": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500
                    }
                },
                "answer": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500
                    }
                },
                "difficulty": {
                    "type": "integer",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 1,
                        "max": 3
                    }
                },
                "type": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500
                    }
                }
            }
        },
        "Cards": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Card"
            }
        },
        "Deck": {
            "properties": {
                "subject": {
                    "type": "string",
                    "allowNull": false,
                    "defaultValue": null,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500,
                        "notEmpty": true
                    }
                }
            }
        },
        "Decks": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Deck"
            }
        },
        "Group": {
            "properties": {
                "name": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true,
                    "validate": {
                        "min": 3,
                        "max": 500
                    }
                }
            }
        },
        "Groups": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Group"
            }
        },
        "Result": {
            "properties": {
                "UserId": {
                    "type": "string",
                    "allowNull": false,
                    "notEmpty": true
                },
                "CardId": {
                    "type": "integer",
                    "allowNull": false,
                    "notEmpty": true
                },
                "isCorrect": {
                    "type": "boolean",
                    "allowNull": false,
                    "notEmpty": true
                }
            }
        },
        "Results": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Result"
            }
        }
    },
    "parameters": {
        "id": {
            "name": "id",
            "in": "path",
            "required": "true",
            "type": "integer"
        },
        "userData": {
            "name": "user",
            "in": "body",
            "schema": {
                "$ref": "#/definitions/User"
            }
        },
        "cardData": {
            "name": "card",
            "in": "body",
            "schema": {
                "$ref": "#/definitions/Card"
            }
        }
    }
}